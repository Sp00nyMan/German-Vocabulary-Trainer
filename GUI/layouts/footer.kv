<Footer>:
    padding: dp(15)

    orientation: 'horizontal'
    spacing: dp(50)
    MDRectangleFlatButton:
        id: hint
        size_hint_x: 0.3

        text: 'HINT'
        on_release: root.screen.hint()

    MDRectangleFlatButton:
        id: submit
        size_hint_x: 0.3

        text: 'SUBMIT'
        on_release: root.screen.on_submit(*root.screen.get_user_input())