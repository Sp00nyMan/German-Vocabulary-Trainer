#: include GUI/layouts/BackButton.kv

<MainMenuScreen>:
    BoxLayout:
        anchor_y: 'top'
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            BackButton:
                id: back
                disabled: True
                opacity: 0
            MDLabel:
                id: title
                text: "MAIN MENU"
        MDBoxLayout:
            id: body
            orientation: 'vertical'
            spacing: '15dp'
            size_hint: 1, 0.8